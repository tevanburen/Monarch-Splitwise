{
	"name": "Monarch-Splitwise",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "dist/background.js"
	},
	"content_scripts": [
		{
			"js": ["dist/inject-ui.js"],
			"matches": ["*://app.monarch.com/*", "*://secure.splitwise.com/*"]
		}
	],
	"web_accessible_resources": [
		{
			"resources": [
				"dist/fetch-interceptor.js",
				"dist/ui.html",
				"dist/ui.js",
				"dist/ui.css"
			],
			"matches": ["*://app.monarch.com/*", "*://secure.splitwise.com/*"]
		}
	]
}
